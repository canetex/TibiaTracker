    "scraping_methods": {
      "deaths": {
        "description": "Extrai personagens da página de últimas mortes",
        "selectors": {
          "table": "table",
          "character_link": "a[href*='characterprofile.php?name=']",
          "victim_column": "td:first-child",
          "death_info": "td:nth-child(2)"
        }
      },
      "powergamers": {
        "description": "Extrai personagens da página de powergamers",
        "selectors": {
          "table": "table",
          "character_link": "a[href*='characterprofile.php?name=']",
          "experience_gained": "td:nth-child(2)",
          "level_info": "td:nth-child(3)"
        }
      },
      "onlinelist": {
        "description": "Extrai personagens da lista de jogadores online",
        "selectors": {
          "table": "table",
          "character_link": "a[href*='characterprofile.php?name=']",
          "name_column": "td:first-child",
          "vip_status": "td:nth-child(2)",
          "level_column": "td:nth-child(3)",
          "vocation_column": "td:nth-child(4)",
          "guild_column": "td:nth-child(5)"
        }
      }
    },
    "api_config": {
      "base_url": "http://localhost:8000",
      "endpoint": "/api/v1/characters/search",
      "delay_between_requests": 1.0,
      "timeout_seconds": 30,
      "max_retries": 3
    },
    "cron_config": {
      "schedule": "0 2 */3 * *",
      "description": "Executar às 2:00 da manhã a cada 3 dias",
      "log_file": "auto-load-cron.log"
    }
